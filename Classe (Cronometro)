public class Cronometro {
	
	private int hora;
	private int minuto;
	private int segundo;
	
	public void acertarCronometro(int hora, int minuto, int segundo) {
		if (hora < 0  || minuto < 0 || segundo < 0) {
			System.out.println("A hora, minuto  e segundo não devem possuir valores negativos");
			return;
		}
		
		if (hora > 23) {
			System.out.println("A hora informada deve ser maior que zero!!! ");
			return;
		}
		
		 if (minuto > 59 || segundo > 59) {
			System.out.println("O maior segundo e minuto que podem ser informados é 59");
			return;
		}
		 
		 this.hora = hora;
		 this.minuto = minuto;
		 this.segundo = segundo;
	}
	public void horaAtual() {
		String h = "Hora Atual: ";
		if (hora < 10) {
			h += "0";
		}
		
		h += hora + ": ";
		
		if (minuto < 10) {
			h += "0";
		}
		h += minuto + ":";
		
		if (segundo < 10) {
			h += "0";
		}
		h += segundo;
		System.out.println(h);
		
	}
	
	
	public void proximoSegundo() {
		if (segundo == 59) {
			segundo = 0;
			proximoMinuto();
		}else {
			segundo++;
		}
	}
	
	public void proximoMinuto() {
		if(minuto == 59) {
			minuto = 0;
			proximaHora();
		}else {
			minuto++;
		}
	}
	
	
	
	public void proximaHora() {
		if (hora == 23) {
			hora = 0;
		}
		else {
			hora++;
		}

	}


}
